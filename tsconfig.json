{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2017"],
    "module": "commonjs",
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": ["node_modules", "dist", "typings"],
  "include": ["src"]
}
